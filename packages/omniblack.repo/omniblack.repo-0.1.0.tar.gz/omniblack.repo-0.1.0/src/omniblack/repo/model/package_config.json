{
    "$schema": "../../../../../model/schema/struct.schema.json",
    "name": "package_config",
    "desc": {
        "en": "The package local omniblack settings"
    },
    "display": {
        "en": "Package Configuration"
    },
    "fields": [
        {
            "desc": {
                "en": "The name of the package described by this configuration."
            },
            "display": {
                "en": "Name"
            },
            "name": "name",
            "required": true,
            "list": false,
            "type": "string"
        },
        {
            "child_attrs": {
                "struct": "license"
            },
            "desc": {
                "en": "The license of this package if it differs from the repository's main license."
            },
            "display": {
                "en": "License"
            },
            "name": "license",
            "type": "child",
            "required": true
        },
        {
            "desc": {
                "en": "The type of package."
            },
            "display": {
                "en": "Type"
            },
            "name": "type",
            "list": false,
            "required": true,
            "type": "choice",
            "choice_attrs": {
                "enum_name": "PkgKind",
                "choices": [
                    {
                        "display": {
                            "en": "Library"
                        },
                        "name": "lib"
                    },
                    {
                        "display": {
                            "en": "Application"
                        },
                        "name": "app"
                    },
                    {
                        "display": {
                            "en": "Single Page Application"
                        },
                        "name": "spa"
                    },
                    {
                        "display": {
                            "en": "Command Line Application"
                        },
                        "name": "cli"
                    },
                    {
                        "display": {
                            "en": "Server"
                        },
                        "name": "server"
                    }
                ]
            }
        },
        {
            "desc": {
                "en": "The type of library the package contains"
            },
            "display": {
                "en": "Library Type"
            },
            "name": "lib_type",
            "list": false,
            "required": false,
            "assumed": null,
            "type": "choice",
            "choice_attrs": {
                "enum_name": "LibKind",
                "choices": [
                    {
                        "display": {
                            "en": "Svelte Component Library"
                        },
                        "name": "svelte"
                    },
                    {
                        "display": {
                            "en": "Javascript Library"
                        },
                        "name": "js"
                    },
                    {
                        "display": {
                            "en": "Python Library"
                        },
                        "name": "python"
                    }
                ]
            }
        },
        {
            "desc": {
                "en": "A path to an html template to use for serving the resulting javascript bundle. If not provided no html file will be generated. This path will be resolved using the `require.resolve` algorithm. `@omniblack/vulcan` provides a default template at `@omniblack/vulcan/template.html`."
            },
            "display": {
                "en": "Template Path"
            },
            "name": "template_path",
            "type": "string"
        },
        {
            "desc": {
                "en": "The public path from which the spa will be served."
            },
            "display": {
                "en": "Public Path"
            },
            "name": "public_path",
            "type": "string"
        },
        {
            "desc": {
                "en": "The directory where the spa pages are kept."
            },
            "display": {
                "en": "Pages Directory"
            },
            "name": "pages_dir",
            "type": "string"
        },
        {
            "child_attrs": {
                "struct": "meta:ui_string"
            },
            "desc": {
                "en": "The name of the package to be displayed to users."
            },
            "display": {
                "en": "Product Name"
            },
            "name": "product_name",
            "type": "child"
        },
        {
            "assumed": "build",
            "desc": {
                "en": "The directory relative to the package to place build output."
            },
            "display": {
                "en": "Output Directory"
            },
            "name": "output_dir",
            "type": "string"
        },
        {
            "desc": {
                "en": "The environments this package should be built for."
            },
            "display": {
                "en": "Environments"
            },
            "list": true,
            "name": "environments",
            "type": "string",
            "attrs": {
                "valid_values": [
                    {
                        "display": {
                            "en": "Browser"
                        },
                        "name": "browser"
                    },
                    {
                        "display": {
                            "en": "Node"
                        },
                        "name": "node"
                    }
                ]
            }
        }
    ]
}
