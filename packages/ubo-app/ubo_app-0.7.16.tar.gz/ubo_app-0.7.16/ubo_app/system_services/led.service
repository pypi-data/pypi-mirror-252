[Install]
WantedBy=multi-user.target

[Unit]
Description=Ubo LED Service
Before=hardware-test.service

[Service]
Type=simple
User=root
Environment=PYTHONPATH={{INSTALLATION_PATH}}/lib/python3.9/site-packages/
ExecStart={{INSTALLATION_PATH}}/bin/python {{INSTALLATION_PATH}}/lib/python3.11/site-packages/ubo_app/services/0-rgb-ring/rgb_ring_manager.py
WorkingDirectory={{INSTALLATION_PATH}}/lib/python3.11/site-packages/ubo_app/
StandardOutput=inherit
StandardError=inherit
KillMode=control-group
Restart=always
RestartPreventExitStatus=255
RuntimeDirectory=ubo
RuntimeDirectoryMode=0755
