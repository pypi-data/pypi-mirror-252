<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Inherit the settings view -->
        <record id="view_res_config_settings_inherit" model="ir.ui.view">
            <field name="name">account.res.config.settings.view.inherit</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="account.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <!-- Override the Fiscal Localization header -->
                <h2 attrs="{'invisible': [('has_accounting_entries','!=',False)]}" position="replace">
                    <h2>Fiscal Localization</h2>
                </h2>

                <!-- Override the o_setting_box div -->
                <div class="col-12 col-lg-6 o_setting_box" attrs="{'invisible': [('has_accounting_entries','!=',False)]}" position="attributes">
                    <attribute name="attrs">{'invisible': []}</attribute>
                </div>

                <!-- Override the Package field -->
                <field name="chart_template_id" position="attributes">
                    <attribute name="attrs">{'readonly': [('has_accounting_entries','!=',False)]}</attribute>
                </field>

                <!-- Override the Install More Packages button -->
                <xpath expr="//div[@name='fiscal_localization_setting_container']//button" position="attributes">
                    <attribute name="attrs">{'invisible': [('has_accounting_entries','!=',False)]}</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
